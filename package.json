{
	"name": "runpod-client",
	"private": false,
	"version": "1.0.0",
	"type": "module",
	"main": "./dist/runpod-client.umd.cjs",
	"module": "./dist/runpod-client.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/runpod-client.js",
			"require": "./dist/runpod-client.umd.cjs"
		}
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"make-badges": "istanbul-badges-readme",
		"test": "jest",
		"test:badge": "jest --coverage && npm run make-badges",
		"pub:patch": "npm run test:badge && npm version patch && npm publish",
		"pub:minor": "npm run test:badge && npm version minor && npm publish",
		"pub:major": "npm run test:badge && npm version major && npm publish",
		"postpublish": "git push --follow-tags"
	},
	"devDependencies": {
		"@types/jest": "^29.5.2",
		"@types/node": "^20.2.5",
		"dotenv": "^16.1.4",
		"istanbul-badges-readme": "^1.8.5",
		"jest": "^29.5.0",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.2",
		"vite": "^4.3.9",
		"vite-plugin-dts": "^2.3.0"
	}
}
